{% extends 'base.html.twig' %}
{% block meta %}
    <meta name="description" content="Vous aimez le digital, passionné et à l’écoute ? Vous avez toujours rêvé de travailler en équipe dans le domaine du numérique ? Vous pensez avoir les compétences nécessaires pour aider à développer notre enseigne ? N’attendez plus, et postulez maintenant !">
    <meta name="keywords" content="Offre d’emploi, postuler, candidature, numérique, agence, développeur, graphiste, community manager, apporteur d’affaires, commercial, chercher un travail digital, travailler dans le numérique.">
{% endblock %}
{% block title %}Candidature{% endblock %}
{% block body %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    {% include 'commons/_headerLittle.html.twig' %}
     <main class="recruitementPage backgroundAnimation">
         <div class="mobilBlock heightDivResponsive"></div>
         <h1  class="titleResponsiveRecruitement">N'attendez plus, postulez!</h1>
         <form class="recruitementForm" method="post">
             {{ form_start(recruitementForm) }}
             <div class="errorFormMessage"></div>
             <div class="formContactParent">
                 <div class="formContactChild1">
                     <div class="wrap-input2">
                         {{ form_label(recruitementForm.name) }}
                         <br>
                         {{ form_widget(recruitementForm.name, { 'attr': {'class': 'input2'} }) }}
                         <span class="focus-input2" data-placeholder="NAME"></span>
                         <div class="errorFormMessage">{{ form_errors(recruitementForm.name) }}</div>
                     </div>
                     <div class="wrap-input2">
                         {{ form_label(recruitementForm.surname) }}
                         <br>
                         {{ form_widget(recruitementForm.surname, { 'attr': {'class': 'input2'} }) }}
                         <span class="focus-input2" data-placeholder="SURNAME"></span>
                         <div class="errorFormMessage">{{ form_errors(recruitementForm.surname) }}</div>
                     </div>
                     <div class="wrap-input2">
                         {{ form_label(recruitementForm.mail) }}
                         <br>
                         {{ form_widget(recruitementForm.mail, { 'attr': {'class': 'input2'} }) }}
                         <span class="focus-input2" data-placeholder="EMAIL"></span>
                         <div class="errorFormMessage">{{ form_errors(recruitementForm.mail) }}</div>
                     </div>
                 </div>
                 <div class="formContactChild2">
                     <div class="wrap-input2">
                         {{ form_label(recruitementForm.phone) }}
                         <br>
                         {{ form_widget(recruitementForm.phone, { 'attr': {'class': 'input2'} }) }}
                         <span class="focus-input2" data-placeholder="PHONE"></span>
                         <div class="errorFormMessage">{{ form_errors(recruitementForm.phone) }}</div>
                     </div>
                     <div class="wrap-input2">
                         {{ form_label(recruitementForm.message) }}
                         <br>
                         {{ form_widget(recruitementForm.message, { 'attr': {'class': 'input2'} }) }}
                         <span class="focus-input2" data-placeholder="MESSAGE"></span>
                         <div class="errorFormMessage">{{ form_errors(recruitementForm.message) }}</div>
                     </div>
                     <div class="wrap-input2">
                         {{ form_label(recruitementForm.document) }}
                         <br>
                         {{ form_widget(recruitementForm.document, { 'attr': {'class': 'input2'} }) }}
                         <span class="focus-input2" data-placeholder="DOCUMENT"></span>
                         <div class="errorFormMessage">{{ form_errors(recruitementForm.document) }}</div>
                     </div>
                     <div>
                         {{ form_label(recruitementForm.envoyer) }}
                         {{ form_widget(recruitementForm.envoyer, { 'attr': {'class': 'submitForm'} }) }}
                     </div>
                 </div>
             </div>
             {{ form_end(recruitementForm) }}
         </form>
         <br>
         <br>
         <br>
         {% if is_granted("ROLE_EDITOR") %}
         <a class="aEffect linkRecruitement" href="{{ path ('recruitement_admin') }}">Les candidatures</a>
         {% endif %}
     </main>
    {% include 'commons/_footer.html.twig' %}
{% endblock %}