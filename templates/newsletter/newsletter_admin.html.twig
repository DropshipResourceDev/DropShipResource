{% extends 'base.html.twig' %}
{% block title %}Zone Admin{% endblock %}
{% block body %}

    {% include 'commons/_headerLittle.html.twig' %}
    <main class="newsletter">
        {% if is_granted("ROLE_EDITOR") %}
        <div>
            <a class="aEffect" href="mailto:{% for contact in newsletter %}{{ contact.mail }},{% endfor %}" target="_blank">Envoi général</a>
        </div>
            {% for contact in newsletter %}
                <div class="newsletterForContainer ">
                    <div class="newsletterFor first">
                        {{ contact.mail }}
                        <a class="suppButtonNewsletter" href="{{ path('newsletterDeleteId', {'id' : contact.id}) }}">Supprimer</a>
                    </div>
                </div>
            {% endfor %}
        {% endif %}
    </main>
    {% include 'commons/_footer.html.twig' %}

{% endblock %}